{{>admin_navigation}}
<div class="container p-4">
    <div class="row">
        {{#each lista_marcas}}
         <div class="col-md-9">
        <table class="table table-striped table-bordered">
            <thead>
             <tr>
                 <th>ID</th>
                 <th>Nombre</th>
                 <th>Descripcion</th>
                 <th>Opciones</th>
             </tr>
            </thead>
            <tr>
                <td>{{id}}</td>
                <td>{{nombre}}</td>
                <td>{{descripcion}}</td>
                <td>
                    <a href="/empresa/marca/delete/{{id}}" class="btn btn-danger">Eliminar</a>
                    <a href="/empresa/marca/editar/{{id}}" class="btn btn-secondary">Editar</a>
                </td>
            </tr>
        </table>
          </div>
        {{/each}}
    </div>
</div>