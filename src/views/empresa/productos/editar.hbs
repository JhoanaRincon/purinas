{{>admin_navigation}}
<div class="container p-4"> 
    <div class="row">
        <div class="col.md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/empresa/productos/editar/{{producto.id}}" method="POST">
                    <div class="form-group">
                            <input type="number" value="{{producto.id}}" class="form-control" name="id" placeholder="Id" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{producto.referencia}}" class="form-control" name="referencia" placeholder="Referencia">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{producto.nombre}}" class="form-control" name="nombre" placeholder="Nombre">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{producto.descripcioncorta}}" class="form-control" name="descripcioncorta" placeholder="Descripcion" >
                        </div>
                        <div class="form-group">
                            <textarea name="detalle"  rows="2" class="form-control" placeholder="Detalle" ></textarea>
                        </div>
                        <div class="form-group">
                            <input type = "number" value="{{producto.valor}}" step = "any" min="0" class="form-control" name="valor" placeholder="Valor">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{producto.palabrasclave}}" class="form-control" name="palabrasclave" placeholder="PalabrasClave" >
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{producto.estado}}" class="form-control" name="estado" placeholder="Estado">
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{producto.categoria_id}}" class="form-control" name="categoria_id" placeholder="Categoria" >
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{producto.marca_id}}" class="form-control" name="marca_id" placeholder="Marca" >
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">SAVE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>