{{>user_navigation}}
<style>
    *{
        transition: 0.3s;
    }
   .producto:hover{
       transform: scale(1.1);
   } 
</style>
<div class="container pt-4">
    <div class="row">

        {{#each productos}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 pt-2 pb-2">
            <div class="card producto">
                <img src="/generic_img.png" class="card-img-top" width="100%">
                <div class="card-body">
                    <h5 class="card-title">{{nombre}}</h5>
                    <p class="card-text">
                        {{descripcioncorta}}
                        <br>
                        {{detalle}}
                    </p>
                    <p class="text-success">
                        ${{valor}}
                    </p>
                </div>
            </div>
        </div>
        {{else}}
        No hay productos registrados
        {{/each}}




    </div>
</div>